{
  "version": "1.0.0",
  "name": "Telegram Web Auto-Reply",
  "description": "GA 门槛 - 生产就绪标准版本",
  "platforms": {
    "windows": {
      "target": "nsis",
      "arch": [
        "x64",
        "ia32"
      ],
      "icon": "build/assets/icons/icon.ico",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "arch": [
        "x64",
        "arm64"
      ],
      "icon": "build/assets/icons/icon.icns",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "arch": [
        "x64"
      ],
      "icon": "build/assets/icons/icon.png",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    }
  },
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "dist-electron/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "docs/user-manual",
      "to": "docs/user-manual"
    },
    {
      "from": "docs/operations-manual",
      "to": "docs/operations-manual"
    }
  ],
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Telegram Web Auto-Reply"
  },
  "dmg": {
    "title": "${productName} ${version}",
    "backgroundColor": "#ffffff",
    "window": {
      "width": 540,
      "height": 380
    },
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "publish": {
    "provider": "generic",
    "url": "https://releases.example.com/"
  }
}
