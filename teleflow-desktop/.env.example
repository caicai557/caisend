# Electron + React 开发环境变量示例

# 基础运行参数
NODE_ENV=development
VITE_DEV_SERVER_URL=http://localhost:5173
TELEFLOW_APP_NAME=TeleFlow Desktop

# 数据库与持久化
DATABASE_PATH=./data/teleflow.db
DATABASE_MIGRATIONS=./database/migrations
DATABASE_BACKUP_PATH=./data/backups
BROWSER_DATA_ROOT=./browser_data

# Playwright / 多账号浏览器上下文
PLAYWRIGHT_TIMEOUT_MS=30000
PLAYWRIGHT_MAX_CONTEXTS=10

# 翻译服务密钥
GOOGLE_TRANSLATE_API_KEY=
DEEPL_API_KEY=
BAIDU_APP_ID=
BAIDU_SECRET_KEY=
LIBRE_TRANSLATE_ENDPOINT=https://libretranslate.teleflow.dev

# 日志与遥测
LOG_LEVEL=info
LOG_PATH=./logs
LOG_MAX_SIZE_MB=50
LOG_MAX_FILES=14
TELEMETRY_ENDPOINT=https://telemetry.teleflow.dev

# 安全配置
ENCRYPTION_KEY=
SAFE_STORAGE_NAMESPACE=teleflow
SESSION_RETENTION_DAYS=30

# CLI / 配置文件
TELEFLOW_CLI_PATH=python
TELEFLOW_CONFIG_PATH=./config/default.yaml
