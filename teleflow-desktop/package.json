{
  "name": "teleflow-desktop",
  "version": "1.0.0",
  "description": "Teleflow Desktop UI - Telegram Web 自动回复系统桌面端",
  "main": "dist-electron/main/main.js",
  "author": "Teleflow Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:main": "electron .",
    "dev:renderer": "vite dev",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:imports": "eslint src/views/AccountDetail/index.tsx src/views/Dashboard/index.tsx src/views/Logs/index.tsx vite.config.ts vitest.config.ts --fix --rule 'import/order: [\"error\", {\\\"groups\\\": [[\\\"builtin\\\", \\\"external\\\"], \\\"internal\\\", [\\\"parent\\\", \\\"sibling\\\", \\\"index\\\"]], \\\"newlines-between\\\": \\\"always\\\", \\\"alphabetize\\\": {\\\"order\\\": \\\"asc\\\", \\\"caseInsensitive\\\": true}}]'",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "playwright": "playwright test",
    "playwright:headed": "playwright test --headed",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.303.0",
    "playwright": "^1.56.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.21.0",
    "recharts": "^3.4.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "yaml": "^2.3.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/better-sqlite3": "^7.6.12",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.32",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.teleflow.desktop",
    "productName": "Teleflow",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
